{
    "name": "rust-toolchain",
    "version": "1.0.7",
    "private": false,
    "description": "Install the Rust toolchain",
    "main": "src/main.ts",
    "type": "module",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "scripts": {
        "build": "tsc",
        "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
        "lint": "tsc --noEmit && eslint 'src/**/*.ts' '__tests__/**/*.ts'",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "package": "ncc build --source-map --license LICENSE.txt"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions-rs/toolchain.git"
    },
    "keywords": [
        "actions",
        "rust",
        "rustup",
        "toolchain"
    ],
    "author": "actions-rs",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/actions-rs/toolchain/issues"
    },
    "dependencies": {
        "@actions/core": "^1.6.0",
        "@actions/exec": "^1.0.4",
        "@actions/io": "^1.0.2",
        "@actions/tool-cache": "^1.7.1",
        "compare-versions": "^4.1.3"
    },
    "devDependencies": {
        "@types/jest": "^27.1.3",
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "@vercel/ncc": "^0.33.3",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.1.3",
        "mock-env": "^0.2.0",
        "npm-check-updates": "12.5.11",
        "prettier": "^2.5.1",
        "temp-write": "^5.0.0",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.7.0",
        "typescript": "<4.6.0"
    }
}
